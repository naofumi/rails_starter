<div id="<%= dom_id post %>">
  <p>
    <strong>Name:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

  <p>
    <strong>Tags:</strong>
    <%= post.tags.map(&:name).join(', ') %>
  </p>

  <%= link_to 'Edit', edit_post_path(post) %>

</div>
